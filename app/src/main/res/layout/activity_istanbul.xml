<!--        app:queryHint="Arama Yap..."/>-->

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPageristanbul"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>





</LinearLayout>













